{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2019",
    "lib": ["es2020", "dom"],
